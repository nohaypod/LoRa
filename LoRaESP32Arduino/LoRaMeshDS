//declarações originais de sensores e muito mais, basta adicionar
#include "esp_sleep.h" //muy necesaria
RTC_DATA_ATTR int bootCount = 0;
//declarações originais de sensores e muito mais, basta adicionar

void setup() {
  //declarações originais de sensores e muito mais, basta adicionar
  esp_sleep_enable_timer_wakeup(120 * 1000000); //factor conversion calculate
  ++bootCount;//Increment boot number and print it every reboot
  Serial.println("Boot number: " + String(bootCount));
  //declarações originais de sensores e muito mais, basta adicionar  
}
void loop() {
  ///declarações originais de sensores e muito mais, basta adicionar
  Serial.println("o dispositivo entrará no modo de suspensão profunda");
  // Entrar en modo de sueño profundo
  esp_deep_sleep_start();
}
